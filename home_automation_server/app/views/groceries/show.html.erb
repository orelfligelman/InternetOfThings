<%- model_class = Grocery -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:meat) %>:</strong></dt>
  <dd><%= @grocery.meat %></dd>
  <dt><strong><%= model_class.human_attribute_name(:vegetable) %>:</strong></dt>
  <dd><%= @grocery.vegetable %></dd>
  <dt><strong><%= model_class.human_attribute_name(:fruit) %>:</strong></dt>
  <dd><%= @grocery.fruit %></dd>
  <dt><strong><%= model_class.human_attribute_name(:dairy) %>:</strong></dt>
  <dd><%= @grocery.dairy %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              groceries_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_grocery_path(@grocery), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              grocery_path(@grocery),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
