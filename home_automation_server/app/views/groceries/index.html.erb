<%- model_class = Grocery -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:meat) %></th>
      <th><%= model_class.human_attribute_name(:vegetable) %></th>
      <th><%= model_class.human_attribute_name(:fruit) %></th>
      <th><%= model_class.human_attribute_name(:dairy) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @groceries.each do |grocery| %>
      <tr>
        <td><%= link_to grocery.id, grocery_path(grocery) %></td>
        <td><%= grocery.meat %></td>
        <td><%= grocery.vegetable %></td>
        <td><%= grocery.fruit %></td>
        <td><%= grocery.dairy %></td>
        <td><%=l grocery.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_grocery_path(grocery), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      grocery_path(grocery),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_grocery_path,
            :class => 'btn btn-primary' %>
