<%- model_class = Thermometer -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:location) %>:</strong></dt>
  <dd><%= @thermometer.location %></dd>
  <dt><strong><%= model_class.human_attribute_name(:maxtemp) %>:</strong></dt>
  <dd><%= @thermometer.maxtemp %></dd>
  <dt><strong><%= model_class.human_attribute_name(:power) %>:</strong></dt>
  <dd><%= @thermometer.power %></dd>
  <dt><strong><%= model_class.human_attribute_name(:current_temp) %>:</strong></dt>
  <dd><%= @thermometer.current_temp %></dd>
  <dt><strong><%= model_class.human_attribute_name(:user_id) %>:</strong></dt>
  <dd><%= @thermometer.user_id %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              thermometers_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_thermometer_path(@thermometer), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              thermometer_path(@thermometer),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
