<h1>Listing rooms</h1>

<table>
  <thead>
    <tr>
      <th>Bedroom</th>
      <th>Bath</th>
      <th>Living</th>
      <th>Dining</th>
      <th>Garage</th>
      <th>Basement</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @rooms.each do |room| %>
      <tr>
        <td><%= room.bedroom %></td>
        <td><%= room.bath %></td>
        <td><%= room.living %></td>
        <td><%= room.dining %></td>
        <td><%= room.garage %></td>
        <td><%= room.basement %></td>
        <td><%= link_to 'Show', room %></td>
        <td><%= link_to 'Edit', edit_room_path(room) %></td>
        <td><%= link_to 'Destroy', room, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

