<h1>Listing groceries</h1>

<table>
  <thead>
    <tr>
      <th>Meat</th>
      <th>Vegetable</th>
      <th>Fruit</th>
      <th>Dairy</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @groceries.each do |grocery| %>
      <tr>
        <td><%= grocery.meat %></td>
        <td><%= grocery.vegetable %></td>
        <td><%= grocery.fruit %></td>
        <td><%= grocery.dairy %></td>
        <td><%= link_to 'Show', grocery %></td>
        <td><%= link_to 'Edit', edit_grocery_path(grocery) %></td>
        <td><%= link_to 'Destroy', grocery, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Grocery', new_grocery_path %>
